    <script src="js/bootstrap.js" > -->

  </head>

  <body>
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
        <nav class="topnav" id="myTopnav">
          <div id="left">
          <a href="/">
            <img class="topnav__link img" src="/images/cropped-cropped-NDLP-3-min-e1544695116495.png">
          </a>
            <span class="topnav__link">Notre Dame de la Providence</span>
          </div>
          {% if is_granted('ROLE_USER') %}
              <div class="nav-link disabled">
                <i class="fas fa-user"></i>
                {% if app.user %}
                  <strong>{{ app.user.username }}</strong>
                {% endif %}
              </div>
              <a class="topnav__link" id="right" href="{{ path('app_logout') }}">{{'Logout'|trans}}</a>
              {% else %}
              <a class="topnav__link" id="right" href="{{ path('app_login') }}">{{'Sign in'|trans}}</a>
              {% endif %}
        </nav>

    <main>
          {% block body %}{% endblock %}
    </main><!-- /.container -->
